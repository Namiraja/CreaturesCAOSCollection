* CREATE
inst
     * Check if already existing
     doif totl 1 2 15350 > 0
          dbg: outs "CCC: Already existing, stopping creation"
          stop
     endi
     dbg: outs "CCC: Creating GUI"
     new: comp 1 2 15350 "creaturecarecabinet" 3 0 8900
          attr 308
          bhvr 0
          perm 60
          clac 0
          * default position x, y
          setv ov01 -336
          setv ov02 399
          flto ov01 ov02
          * in/out flag: -1=in/closed, +1=out/open
          setv ov99 -1
          * alarm indicator
          setv ov05 0
          * alarm visual and sound toggle
          setv ov07 1
          setv ov08 1
          * scan toggle
          setv ov09 1
          * scan norn=1, grendel=2, ettin=4, geat=8
          doif game "Grettin" = 1
               setv ov06 15
          else
               setv ov06 1
          endi
          * graph preset
          * 0 = digestive, 1 = respiratory, 2 = toxins,       3 = antigens
          * 4 = medicinal, 5 = antibodies , 6 = reproduction, 7 = custom
          setv ov10 0
          * graph line toggles
          setv ov11 1
          setv ov12 1
          setv ov13 1
          setv ov14 1
          setv ov15 1
          setv ov16 1
          setv ov17 1
          setv ov18 1
          * input event mask raw key down+up
          imsk 3

          sets name "currently opened module" "init"
          * Create parts
          * Scan button
          pat: butt 1 "creaturecarecabinet" 3 2 298 10 5 [1] 1001 0
          part 1
          anim [0]
          * sick counter
          pat: fixd 5 "creaturecarecabinet" 13 310 19 10 "whiteontransparentchars"
          part 5
          frmt 0 0 0 0 0 0 0
          * Graph button
          pat: butt 2 "creaturecarecabinet" 5 2 298 57 5 [1] 1002 0
          part 2
          anim [0]
          * Organ button
          pat: butt 3 "creaturecarecabinet" 7 2 298 106 5 [1] 1003 0
          part 3
          anim [0]
          * Inject button
          pat: butt 4 "creaturecarecabinet" 9 2 298 153 5 [1] 1004 0
          part 4
          anim [0]
          * initial quick tick
          tick 1
slow
* open after creation
mesg writ targ 0

* ACTIVATE 1 open up
scrp 1 2 15350 1
     doif name "currently opened module" = "init"
          call 1001 0 0
     endi
     inst
          lock
               snde "gui1"
               clac -1
               velo 20 0
               wait 12
               velo 10 0
               wait 8
               velo 5 0
               wait 3
               doif posx >= 0
                    velo 0 0
                    flto 0 ov02
               endi
               * toggle in/out flag
               negv ov99
               clac 1
          unlk
     slow
endm

* ACTIVATE 2 close
scrp 1 2 15350 2
     inst
          lock
               snde "gui3"
               clac -1
               velo -20 0
               wait 12
               velo -10 0
               wait 8
               velo -5 0
               wait 3
               velo 0 0
               flto ov01 ov02
               * toggle in/out flag
               negv ov99
               clac 0
          unlk
     slow
endm

* TIMER scan for infected, draw graph, test organs
scrp 1 2 15350 9
     * scan module
     inst
          doif name "currently opened module" = "scan"
               * clean canvas
               * unset buttons
               part 28
               pose 0
               part 29
               pose 0
               * clear slots
               setv va00 13
               seta ov03 null
               seta ov04 null
               pat: move 10 -80 5
               part 11 gall "blnk" 0
               part 12 gall "blnk" 0
               loop
                    part va00
                    ptxt " "
                    addv va00 1
               untl va00 = 19
               * ov00 page index
               * va99 creature index for left slot
               setv va99 ov00
               mulv va99 2
               subv va99 1
               * va98 creature index for right slot +1
               setv va98 ov00
               addv va98 1
               mulv va98 2
               subv va98 1
               * creature index
               setv va00 1
               * creature drawn index
               setv va02 1
          endi
          * scanning enabled and creatures to scan for?
          doif ov09 = 1 and ov06 > 0
               * alarm check
               setv va21 0
               * current creature sick marker
               setv va26 0
               * counter
               setv va27 0
               * Grendel + Ettin unlocked?
               doif game "Grettin" = 1
                    setv va03 0
               else
                    setv va03 1
               endi
               enum 4 va03 0
                    * ov06 1=norn, 2=grendel, 4=ettin, 8=geat
                    setv va22 mv06
                    andv va22 1
                    setv va23 mv06
                    andv va23 2
                    setv va24 mv06
                    andv va24 4
                    setv va25 mv06
                    andv va25 8
                    doif gnus = 1 and va22 = 0
                         * dbg: outs "CCC: Skip norn scan"
                    elif gnus = 2 and va23 = 0
                         * dbg: outs "CCC: Skip grendel scan"
                    elif gnus = 3 and va24 = 0
                         * dbg: outs "CCC: Skip ettin scan"
                    elif gnus = 4 and va25 = 0
                         * dbg: outs "CCC: Skip geat scan"
                    else
                         * current creature
                         seta va04 targ
                         * bacteria counter
                         setv va16 0
                         * found toxins
                         sets va19 ""
                         * Scan for bactirial infection
                         * can't use etch since it refers to ownr not targ
                         enum 2 32 23
                              doif ov00 = va04
                                   targ va04
                                   addv va16 1
                              endi
                         next
                         targ va04
                         * found bacteria, raise potential alarm
                         doif va16 > 0
                              setv va26 1
                         endi
                         * scan from chem 66 to chem 89 (toxins + antigens)
                         setv va18 66
                         loop
                              doif chem va18 > 0.1
                                   * only care for names if module open
                                   doif mame "currently opened module" = "scan"
                                        adds va19 read "chemical_names" va18
                                        * show amount from 0-100 instead of 0.0-1.0
                                        adds va19 " ("
                                        setv va20 100
                                        mulv va20 chem va18
                                        setv va20 ftoi va20
                                        adds va19 vtos va20
                                        adds va19 ")\n"
                                   endi
                                   setv va26 1
                              endi
                              addv va18 1
                         untl va18 = 90
                         * found sick creature
                         doif va26 = 1
                              * it's the first one this round, might need alarm
                              doif va21 = 0
                                   setv va21 1
                                   targ ownr
                                   * raise alarm, if it's not on yet
                                   doif ov05 = 0
                                        setv ov05 1
                                        * send sound if enabled
                                        doif ov08 = 1
                                             snde "war1"
                                        endi
                                   endi
                                   targ va04
                              endi
                              * count infected
                              addv va27 1
                         endi
                         * found some and module is open? Draw them
                         doif va26 = 1 and mame "currently opened module" = "scan"
                              * are there creatures before to show? Make button visible
                              doif va00 < va99
                                   sets va03 gtos 0
                                   * creature born or dead but still there?
                                   doif ooww va03 = 3 or ooww va03 = 5
                                        targ ownr
                                        part 28
                                        pose 1
                                        part 29
                                        pose 0
                              endi
                              * fill the current page
                              elif va00 < va98
                                   sets va03 gtos 0
                                   * if creature born or dead and still there
                                   doif ooww va03 = 3 or ooww va03 = 5
                                        * get the face and tint of the creature
                                        sets va05 face
                                        setv va06 face
                                        setv va07 tint 1
                                        setv va08 tint 2
                                        setv va09 tint 3
                                        setv va10 tint 4
                                        setv va11 tint 5
                                        * get the name
                                        sets va12 hist name va03
                                        doif va12 = ""
                                             dbg: outs "CCC: nameless"
                                             sets va12 "?"
                                        endi
                                        * is it dead?
                                        doif dead = 1
                                             adds va12 " (D)"
                                        endi
                                        * get the slots for drawing
                                        targ ownr
                                        * left or right slot?
                                        setv va01 va02
                                        addv va01 10
                                        doif va01 = 11
                                             * left slot creature
                                             seta ov03 va04
                                             * x position left slot
                                             setv va13 45
                                             * move indicator if norn is selected
                                             doif norn = ov03
                                                  pat: move 10 60 5
                                             endi
                                        elif va01 = 12
                                             * right slot creature
                                             seta ov04 va04
                                             * x position right slot
                                             setv va13 195
                                             * move indicator if norn is selected
                                             doif norn = ov04
                                                  pat: move 10 210 5
                                             endi
                                        endi
                                        * y position
                                        setv va14 5
                                        * get rid of blank
                                        pat: kill va01
                                        * draw face
                                        setv va15 va01
                                        addv va15 1000
                                        pat: butt va01 va05 va06 1 va13 va14 1 [] va15 0
                                        part va01
                                        tino va07 va08 va09 va10 va11
                                        * show name
                                        addv va01 2
                                        part va01
                                        ptxt va12
                                        * show bacteria count
                                        addv va01 2
                                        part va01
                                        sets va17 vtos va16
                                        adds va17 " Bacteria"
                                        ptxt va17
                                        * show toxins
                                        addv va01 2
                                        part va01
                                        ptxt va19
                                        * one creature drawn, next slot
                                        addv va02 1
                                   * end check born or dead
                                   endi
                              * there are more creatures to show. Make next page button visible
                              else
                                   sets va03 gtos 0
                                   * creature born or dead and still there?
                                   doif ooww va03 = 3 or ooww va03 = 5
                                        targ ownr
                                        part 29
                                        pose 1
                                   endi
                              endi
                              addv va00 1
                         * end of check for infected & module = scan
                         endi
                         setv va26 0
                    * end of species check
                    endi
               next
               * set counter text
               part 5
               doif va27 > 0
                    ptxt vtos va27
               else
                    ptxt ""
               endi
               * all scanned, no infected? clear alarm.
               doif va21 = 0
                    setv ov05 0
               endi
               tick 100
          * scanning disabled, stop timer
          else
               tick 0
          * end of scan enabled check
          endi
     slow
     * graph module
     inst
          doif name "currently opened module" = "graph"
               * get current preset: ov10
               setv va37 ov10
               setv va36 ov10
               addv va36 1
               * set start and end point for preset chemicals
               mulv va37 8
               mulv va36 8
               * write legend
               sets va38 ""
               setv va31 va37
               loop
                    setv va35 stoi read "ccc_chems" va31
                    adds va38 read "chemical_names" va35
                    adds va38 "\n"
                    addv va31 1
               untl va31 = va36
               part 38 ptxt va38
               * norn selected? Read chemical levels
               doif norn <> null
                    setv va31 va37
                    setv va32 0
                    loop
                         setv va33 va32
                         addv va33 11
                         * line disabled
                         doif avar ownr va33 = -1
                              setv va30 0
                         else
                              * read chem level
                              targ norn
                              doif targ <> null
                                   setv va30 chem stoi read "ccc_chems" va31
                              else
                                   stop
                              endi
                         endi
                         targ ownr
                         part 59
                         * update graph line
                         grpv va32 va30
                         * next chem
                         addv va31 1
                         addv va32 1
                    untl va31 = va36
                    grpv 8 0
               endi
               tick 20
          endi
     slow
       * organ module
       inst
          doif name "currently opened module" = "organ"
                 * norn selected? Get organ information
                 doif norn <> null
                      targ norn
                      * organ conut
                      doif targ <> null
                           setv va40 orgn
                      else
                           stop
                      endi
                      targ ownr
                      part 60
                      ptxt vtos va40
                      * organ damage
                      targ norn
                      sets va41 ""
                      setv va42 0
                      sets va43 ""
                      sets va44 ""
                      setv va45 0
                      setv va46 0
                      doif targ <> null
                           doif va40 > 0
                                loop
                                     doif orgf va42 1 < 0.15
                                          sets va44 "<tint 186 0 44>"
                                     elif orgf va42 1 < 0.25
                                          sets va44 "<tint 254 134 16>"
                                     elif orgf va42 1 < 0.5
                                          sets va44 "<tint 254 248 16>"
                                     elif orgf va42 1 < 0.9
                                          sets va44 "<tint 255 255 255>"
                                     else
                                          sets va44 "<tint 16 215 8>"
                                     endi
                                     sets va47 ""
                                     doif va46 < rean "ccc_organs"
                                          doif read "ccc_organs" va42 = "Uterus"
                                               doif hist gend gtos 0 <> 2
                                                    setv va45 1
                                               endi
                                          endi
                                          setv va46 va42
                                          addv va46 va45
                                          adds va47 read "ccc_organs" va46
                                     else
                                          adds va47 "Organ"
                                          adds va47 vtos va42
                                     endi
                                     adds va47 ": "
                                     adds va47 va44
                                     adds va47 subs vtos orgf va42 1 3 2
                                     adds va47 "%<tint>\n"
                                     doif va42 < 15
                                          adds va41 va47
                                     else
                                          adds va43 va47
                                     endi
                                     addv va42 1
                                     setv va46 va42
                                untl va42 >= orgn
                           else
                                sets va41 ""
                                sets va43 ""
                           endi
                      else
                           sets va41 ""
                           sets va43 ""
                      endi
                      targ ownr
                      part 60
                      ptxt va41
                      part 61
                      ptxt va43
                 endi
                 * TODO set better tick value
                 tick 20
            endi
       slow
     * elif name "currently opened module" = "inject"
endm

* RAW KEY DOWN keybinds
scrp 1 2 15350 73
     * Check if 4 pressed while CTRL down
     * Ctrl+4 scan module
     doif keyd 17 = 1 and _p1_ = '4'
          lock
               * open
               doif ov99 = -1
                    doif name "currently opened module" <> "scan"
                         call 1001 0 0
                    endi
                    call 1 0 0
               * close
               elif ov99 = 1 and name "currently opened module" = "scan"
                    call 2 0 0
               * switch to scan module
               elif ov99 = 1
                    call 1001 0 0
               endi
          unlk
     * Ctrl+5 graph module
     elif keyd 17 = 1 and _p1_ = '5'
          lock
               * open
               doif ov99 = -1
                    doif name "currently opened module" <> "graph"
                         call 1002 0 0
                    endi
                    call 1 0 0
               * close
               elif ov99 = 1 and name "currently opened module" = "graph"
                    call 2 0 0
               * switch to graph module
               elif ov99 = 1
                    call 1002 0 0
               endi
          unlk
     endi
endm

