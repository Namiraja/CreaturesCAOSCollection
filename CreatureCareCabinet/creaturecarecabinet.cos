     inst
          * clear line toggles
          setv va02 11
          loop
               setv avar ownr va02 1
               addv va02 1
          untl va02 > 18
          setv va02 30
          * reset buttons
          loop
               part va02
               pose 1
               addv va02 1
          untl va02 > 37
          * convert from calling part to preset id
          setv va00 _p1_
          subv va00 40
          doif va00 >= 0 and va00 < 9 and va00 <> ov10
               setv va01 0
               part 59
               * all to 0 to visualize change
               loop
                    grpv va01 0
                    addv va01 1
               untl va01 = 9
               setv ov10 va00
               call 9 0 0
          endi
     slow
endm

